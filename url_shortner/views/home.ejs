<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Home Page - URL Shortener</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="overlay">
    <h1>URL Shortener</h1>

    <div class="form-container">
      <form method="POST" action="/url">
        <label>Enter Your Original URL</label>
        <input type="text" name="url" placeholder="https://example.com" required />
        <button type="submit">Generate</button>
      </form>

      <% if (locals.id) { %>
        <div class="generated-url">
          <strong>Short URL:</strong>
          <a href="/url/<%= id %>" target="_blank">
            <%= protocol %>://<%= host %>/url/<%= id %>
          </a>

          <div style="margin-top: 15px;">
            <a href="/" class="analytics-btn">Go to Analytics</a>
          </div>
        </div>
      <% } %>
    </div>

    <% if (!locals.id && urls && urls.length > 0) { %>
      <div class="table-container">
        <h2>All Shortened URLs</h2>
        <table>
          <thead>
            <tr>
              <th>S. No</th>
              <th>Short ID</th>
              <th>Redirect</th>
              <th>Clicks</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% urls.forEach((url, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td>
                  <a href="/url/<%= url.shortId %>" target="_blank">
                    <%= url.shortId %>
                  </a>
                </td>
                <td><%= url.redirectURL %></td>
                <td><%= url.visitHistory.length %></td>
                <td>
                  <form method="POST" action="/url/delete/<%= url.shortId %>" onsubmit="return confirm('Are you sure you want to delete this URL?');">
                    <button type="submit" class="delete-btn">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>
</body>
</html>
